{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "serverpod",
			"args": [
				"generate",
				"-w"
			],
			"options": {
				"cwd": "${workspaceFolder}/systemd_status_server"
			},
			"problemMatcher": [],
			"label": "serverpod: generate -w",
			"detail": "systemd_status_server",
			"group": {
				"kind": "build"
			}
		},
		{
			"type": "dart",
			"command": "dart",
			"cwd": "systemd_status_rpc",
			"args": [
				"run",
				"build_runner",
				"watch"
			],
			"problemMatcher": [],
			"label": "build systemd_status_rpc",
		},
		{
			"type": "dart",
			"command": "dart",
			"cwd": "systemd_status_bridge",
			"args": [
				"run",
				"build_runner",
				"watch"
			],
			"problemMatcher": [],
			"label": "build systemd_status_bridge",
		},
		{
			"type": "dart",
			"command": "dart",
			"cwd": "systemd_status_server",
			"args": [
				"run",
				"build_runner",
				"watch"
			],
			"problemMatcher": [],
			"label": "build systemd_status_server",
		},
		{
			"label": "Build",
			"dependsOn": [
				"serverpod: generate -w",
				"build systemd_status_rpc",
				"build systemd_status_bridge",
				"build systemd_status_server",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"command": "podman-compose",
			"args": [
				"up",
				"-d"
			],
			"problemMatcher": [],
			"label": "podman-compose up -d",
			"detail": "systemd_status_server",
		},
