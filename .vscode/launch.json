{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "client",
      "cwd": "client",
      "request": "launch",
      "type": "dart",
      "args": [
        "--dart-define=SERVER_URL=http://localhost:8080",
      ]
    },
    {
      "name": "client (profile mode)",
      "cwd": "client",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile",
      "args": [
        "--dart-define=SERVER_URL=http://localhost:8080",
      ]
    },
    {
      "name": "client (release mode)",
      "cwd": "client",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "args": [
        "--dart-define=SERVER_URL=http://localhost:8080",
      ]
    },
    {
      "name": "server",
      "cwd": "server",
      "request": "launch",
      "type": "dart",
      "program": "bin/server.dart",
      "args": [
        "-Lall",
        "--config",
        "${workspaceFolder}/server/tool/test-config.yaml",
        "--debug-overwrite-systemctl",
        "${workspaceFolder}/server/tool/systemd-docker/systemctl-docker.sh"
      ],
      "preLaunchTask": "Start systemd container"
    },
    {
      "name": "server (local systemd)",
      "cwd": "server",
      "request": "launch",
      "type": "dart",
      "program": "bin/server.dart",
      "args": [
        "-Lall",
        "--config",
        "${workspaceFolder}/server/tool/test-config.yaml",
      ]
    }
  ]
}
